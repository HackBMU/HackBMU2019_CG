<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorRegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:id="@+id/upper_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#b8cadc" />

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/doctor_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/noun_patient_650722"/>

            <TextView
                android:id="@+id/app_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="DOCT-AID"
                android:fontFamily="@font/bebasneue_bold1"
                android:textColor="#296aa6"
                android:textSize="28.7sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="DOCTOR SIGNUP"
                android:fontFamily="@font/bebasneue_bold1"
                android:textColor="#fcfcfc"
                android:textSize="28.7sp" />

        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/rl_main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#ededed"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_reg_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Name"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_reg_city"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_email"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="City"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_reg_mob"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_city"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Mobile No."
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_mob"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_reg_field"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Field"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_reg_specialisation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_field"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Specialization"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_reg_license"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/et_reg_specialisation"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="License"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_reg_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:fontFamily="@font/rockb"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rl_main_view"
            android:layout_marginTop="20dp"
            android:text="Login ? Tap Here!"
            android:textColor="#8b8b8b"
            android:fontFamily="@font/rockb"
            android:textSize="18sp"
            android:id="@+id/login"/>

        <ImageView
            android:id="@+id/lower_view"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#d8d8d8"
            android:layout_below="@+id/login"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>
</ScrollView>