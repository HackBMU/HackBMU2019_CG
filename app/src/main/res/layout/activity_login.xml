<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorRegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/upper_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#8080ff" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/doctor_image"/>
        <android.support.v7.widget.CardView
            android:id="@+id/rl_main_view"
            app:cardBackgroundColor="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/doctor_image"
            app:contentPaddingTop="30dp"
            app:contentPaddingBottom="30dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="6dp"
            android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_reg_mob"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="Mobile No."
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:text="7015202013"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_reg_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/et_reg_mob"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:hint="Password"
                android:text="abcd"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_reg_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#fff"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="Register"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>