<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6f5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_weight="0.6"
                android:src="@drawable/doctor" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.2"
                android:fontFamily="@font/bebasneue_bold1"
                android:text="DOCT-AID"
                android:textColor="#296aa6"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.2"
                android:fontFamily="@font/bebasneue_bold1"
                android:text="The e-First Aid"
                android:textColor="#296aa6"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/signup_patient"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#b8cadc"
            android:fontFamily="@font/rockb"
            android:text="Sign Up As Patient"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_patient"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rockb"
            android:text="or"
            android:textColor="#296aa6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/signup_doctor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_patient"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/rockb"
            android:text="Sign Up As Doctor"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_doctor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#f8f6f5"
            android:fontFamily="@font/rockb"
            android:text="Login? Tap Here!"
            android:textColor="#6d6e71" />

    </LinearLayout>
</RelativeLayout>